<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesApp" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/design_default_color_on_primary</item>
        <item name="actionBarStyle">@style/NoElevationActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Material3</item>
        <item name="alertDialogTheme">@style/CustomAlertDialogTheme</item>
    </style>

    <style name="NoElevationActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="CircularShape">
        <item name="shapeAppearanceOverlay">@style/Widget.Material3.CircularProgressIndicator.Medium</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog
        </item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog
        </item>
    </style>


